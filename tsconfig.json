{
  "compilerOptions": {
    "module": "ES2022",
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "NodeNext"
    }
  },
  "exclude": ["dist", "node_modules"],
  "vueCompilerOptions": {
    "target": 2.7
  }
}
